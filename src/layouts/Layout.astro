---
import { getCollection } from 'astro:content';
import Search from '../components/Search.astro';

interface Props {
  title?: string;
  description?: string;
  showPlacesSidebar?: boolean;
}

const { 
  title = "Arctic Research Places",
  description = "A collection of Arctic research locations and projects",
  showPlacesSidebar = false
} = Astro.props;

const places = await getCollection('places');
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="bg-primary text-white p-4">
			<nav class="max-w-7xl mx-auto flex justify-between items-center relative z-50">
				<div class="flex items-center gap-4">
					{showPlacesSidebar && (
						<button 
							id="mobile-menu-button"
							class="p-2 -ml-2 md:hidden hover:bg-white/10 rounded transition-colors"
						>
							<span class="block w-5 h-0.5 bg-white mb-1"></span>
							<span class="block w-5 h-0.5 bg-white mb-1"></span>
							<span class="block w-5 h-0.5 bg-white"></span>
						</button>
					)}
					<a href="/">Cambridge Bay Research</a>
				</div>
				<div class="flex gap-4">
					<Search 
						places={places.map(p => ({
							id: p.id.replace('.md', ''),
							name: p.data.name,
							description: p.data.description
						}))}
					/>
					<button class="px-3 py-1 text-sm bg-white/10 rounded hover:bg-white/20">
						üåê FR
					</button>
				</div>
			</nav>
		</header>
		<main class="max-w-7xl mx-auto p-8">
			<slot />
		</main>
	</body>
</html>

<style is:global>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;
</style>
